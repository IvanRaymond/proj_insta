{% extends 'baseLogin.html.twig' %}

{% block title %}Register{% endblock %}
{% block body %}
    <section class="section-content padding-y">

	<!-- ============================ COMPONENT REGISTER   ================================= -->
	<div class="card mx-auto" style="max-width:520px; margin-top:40px;">
		<article class="card-body">
			<header class="mb-4">
				<h4 class="card-title">Formulaire Profile</h4>
			</header>
			
    		{{ form_start(registrationForm,{'method': 'POST'}) }}
					
                    {% for registrationForm in app.flashes('errorProfile') %}
                        <div class="alert alert-info">
                            {{ registrationForm }}
                        </div>
                    {% endfor %}

					<div class="col form-group">
						{{ form_row(registrationForm.adresse,
							{'label': 'Adresse',
							'attr': {'class': 'form-control'}
							}) 
						}}
					</div>

					<div class="col form-group">
						{{ form_row(registrationForm.description,
							{'label': 'Description',
							'attr': {'class': 'form-control'}
							}) 
						}}	
					</div>
					

					<div class="form-group">
						{{ form_row(registrationForm.anniversaire,
							{'label': 'Anniversaire',
							'attr': {'class': 'form-control'}
							}) 
						}}
					</div> 

					<div class="form-group">
						{{ form_row(registrationForm.telephone,
							{'label': 'Telephone',
							'attr': {'class': 'form-control'},
							}) 
						}}
					</div>

					<div class="form-group">
						{{ form_row(registrationForm.genre,
							{'label': 'Genre',
							'attr': {'class': 'form-control'},
							}) 
						}}
					</div>

					<div class="form-group">
						<button type="submit" class="btn btn-primary btn-block"> Enregistrer </button>
					</div>

			{{ form_end(registrationForm) }} 
		</article><!-- card-body.// -->
	</div>

</section>
{% endblock %}
