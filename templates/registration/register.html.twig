{% extends 'baselogin.html.twig' %}

{% block title %}Register{% endblock %}
{% block body %}
    <section class="section-content padding-y">

	<!-- ============================ COMPONENT REGISTER   ================================= -->
	<div class="card mx-auto" style="max-width:520px; margin-top:40px;">
		<article class="card-body">
			<header class="mb-4">
				<h4 class="card-title">Inscription</h4>
			</header>
			
    		{{ form_start(registrationForm,{'method': 'POST'}) }}
				
					<div class="col form-group">
						<label>Nom</label>
						{{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="col form-group">
						<label>Prénom</label>
						{{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
					</div>
					

					<div class="form-group">
						<label>Email</label>
						{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
					</div> 

					<div class="form-group">
						<label>Mot de passe</label>
						{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="form-group">
						<button type="submit" class="btn btn-primary btn-block"> S'inscrire </button>
					</div>

					<div class="form-group">
						<label class="custom-control custom-checkbox"> 	{{ form_widget(registrationForm.agreeTerms) }}
							<div class="custom-control-label">J'accepte <a href="#"> les termes et conditions et la politique de confidentialité</a> </div>
						</label>
					</div>

			{{ form_end(registrationForm) }} 
		</article><!-- card-body.// -->
	</div>

</section>
{% endblock %}
