{% extends 'baseLogin.html.twig' %}

{% block title %}Register{% endblock %}
{% block body %}
    <section class="section-content padding-y">

	<!-- ============================ COMPONENT REGISTER   ================================= -->
	<div class="card mx-auto" style="max-width:520px; margin-top:40px;">
		<article class="card-body">
			<header class="mb-4">
				<h4 class="card-title">Inscription</h4>
			</header>
			
    		{{ form_start(registrationForm,{'method': 'POST'}) }}
					
                    {% for registrationForm in app.flashes('errorEmail') %}
                        <div class="alert alert-info">
                            {{ registrationForm }}
                        </div>
                    {% endfor %}

					<div class="col form-group">
						{{ form_row(registrationForm.name,
							{'label': 'Nom',
							'attr': {'class': 'form-control'}
							}) 
						}}
					</div>

					<div class="col form-group">
						{{ form_row(registrationForm.username,
							{'label': 'Prénom',
							'attr': {'class': 'form-control'}
							}) 
						}}	
					</div>
					

					<div class="form-group">
						{{ form_row(registrationForm.email,
							{'label': 'Email',
							'attr': {'class': 'form-control'}
							}) 
						}}
					</div> 

					<div class="form-group">
						{{ form_row(registrationForm.plainPassword,
							{'label': 'Mot de passe',
							'attr': {'class': 'form-control'}
							}) 
						}}
					</div>

					<div class="form-group">
						<button type="submit" class="btn btn-primary btn-block"> S'inscrire </button>
					</div>

					<div class="form-group">
						<label class="custom-control custom-checkbox"> {{ form_row(registrationForm.agreeTerms) }}
							<div class="custom-control-label">J'accepte <a href="#"> les termes et conditions et la politique de confidentialité </a> </div>
						</label>
					</div>

			{{ form_end(registrationForm) }} 
		</article><!-- card-body.// -->
	</div>

</section>
{% endblock %}
