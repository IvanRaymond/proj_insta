{% extends "baseContact.html.twig" %}

{% block body %}
    <!-- ===============================================-->
    <!--    Main Content-->
    <!-- ===============================================-->
   
    <main class="main" id="top">
      <section class="py-4" id="searchUsers">

        <div class="container px-md-5">
          <div class="row align-items-center">
            <div class="my-4 text-center">
              <h1 class="text-uppercase fs-lg-4 fs-6 fw-bolder text-300 lh-1 position-relative z-index-0">Envie de stalker quelqu'un ?</h1>
              <h1 class="fw-bolder text-outlined fs-4 text-white lh-2 mt-n3 position-relative z-index--1">Lancez-vous !</h1>
              <form class="my-5 px-3">
                <div class="row g-3 g-md-5">
                  <div class="col-md-6">
                    <div class="card border-0">
        
                      <div class="form-floating mb-3">
                        <input class="form-control form-fotogency-header-control" id="floatingEmail" type="text" placeholder="email" />
                        <label for="floatingEmail">Adresse Email</label>
                      </div>
                      
                    </div>
                  </div>
                  
                  <div class="col-12 text-end mt-3">
                    <button class="btn btn-link text-warning p-0" type="submit"><span class="fw-bolder text-uppercase">Rechercher</span><img class="ms-3" src="assets/img/icons/long-arrow.png" alt="" /></button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!-- end of .container-->

      </section> 

      <section class="py-4" id="contact">
        {% if users | length >0 %}
              {% for user in users %}
                <p>email: {{ user.getEmail() }}</p>
              {% endfor %}
        {% else %}
          <p>Aucun email demandé a été trouvé !</p>
        {% endif %}
      </section>

    </main>
  
    
{% endblock %}