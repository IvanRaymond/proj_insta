{% extends "base.html.twig" %}

{% block title %}Hello PhotoController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {{ form_start(form,{'method': 'POST'}) }}
    <section class="vh-100" style="background-color: #ede4c9 ;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-9">

                    <h1 class="text-white mb-4" style="text-align: center;">Poster votre photo !</h1>

                    <div class="card" style="border-radius: 15px;">
                    <div class="card-body">

                        <div class="row align-items-center pt-4 pb-3">
                        <div class="col-md-3 ps-5">

                            {{ form_label(form.title, 'Titre', { 'attr': {'class': 'foo'} }) }}
                            {{ form_widget(form.title, { 'attr': {'class': 'foo'} }) }}

                        </div>
                        </div>

                        <div class="row align-items-center py-3">
                        <div class="col-md-3 ps-5">

                            {{ form_label(form.description, 'Description', { 'attr': {'class': 'foo'} }) }}
                            {{ form_widget(form.description, { 'attr': {'class': 'foo'} }) }}

                        </div>
                        <div class="col-md-9 pe-5">

                            {{ form_label(form.visibilite, 'Visibilit√©', { 'attr': {'class': 'foo'} }) }}
                            {{ form_widget(form.visibilite, { 'attr': {'class': 'foo'} }) }}

                        </div>
                        </div>

                        <div class="row align-items-center py-3">
                        <div class="col-md-3 ps-5">

                            {{ form_label(form.photo, 'Photo', { 'attr': {'class': 'foo'} }) }}
                            {{ form_widget(form.photo, { 'label': 'Votre photo' }) }}

                        </div>
                        </div>

                        <div class="row align-items-center py-3">
                        <div class="col-md-3 ps-5">

                            {{ form_label(form.submit, 'Envoyer', { 'attr': {'class': 'foo'} }) }}
                            {{ form_widget(form.submit, { 'attr': {'class': 'foo'} }) }}

                        </div>
                        </div>
                    </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
    {{ form_widget(form) }}
    {{ form_end(form) }}
</div>

{% endblock %}
