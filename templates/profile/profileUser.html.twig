{% extends 'baseProfileUser.html.twig' %}

{% block title %}Page Profile{% endblock %}

{% block body %}
{% if app.user %}
    <div class="mb-3">
        You are logged in as {{ app.user.email }}, <a href="{{ path('app_logout') }}">Logout</a>
    </div>
{% endif %}
<div class="container">
