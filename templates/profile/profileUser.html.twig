                <div class="col">
                    <img height="50%" width="50%"  src="assets/img/gallery/2.png" alt="" />
                    <hr>
                    <p>Description</p>
                    </br>
                    {% for profile in profile %}
                        {% if app.user %}
                            <p>description : {{ profile.getDescription() }}</p>
                        {% endif %}
                    {% endfor %}
                  
                    <hr>
                    <p>Passion</p>
                    </br>
                    <p>blablabla</p>
                
                </div>
            </div>
        </div>

