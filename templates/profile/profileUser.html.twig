            <div class="card-body">
                <div class="col">
                    <div class="">
                        <div class="row">
                            <div class="col">
                                <h3>{{ app.user.username }}  {{ app.user.name }} </h3> 
                            </div>
                            <div class="col">
                                <span><a href="{{path('addProfile')}}"><i class="fa-solid fa-user"></i></a></span>
                            </div>
